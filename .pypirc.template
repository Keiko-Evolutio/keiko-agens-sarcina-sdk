# .pypirc.template
# Template for PyPI configuration file
# Copy this to ~/.pypirc and replace environment variable placeholders

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
repository = https://upload.pypi.org/legacy/
username = __token__
password = ${PYPI_API_TOKEN}

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = ${TESTPYPI_API_TOKEN}

# Instructions:
# 1. Copy this file to ~/.pypirc
# 2. Replace ${PYPI_API_TOKEN} with your actual PyPI API token
# 3. Replace ${TESTPYPI_API_TOKEN} with your actual TestPyPI API token
# 4. Never commit the actual .pypirc file to version control
#
# To set environment variables:
# export PYPI_API_TOKEN="pypi-your-actual-token-here"
# export TESTPYPI_API_TOKEN="pypi-your-actual-testpypi-token-here"
